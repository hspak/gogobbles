<!DOCTYPE html>
<html>
  <head>
    <title>{{ .Label }}</title>
    <link rel="stylesheet" type="text/css" href="/style/min.css">
    <link rel="stylesheet" type="text/css" href="/style/list.css">
  </head>
  <body>
    <div class="colorbar"></div>
    <a class="smalltitle" href="/"><div class="title">
      <img id="turkey" src="/image/turkey.png"></img>
      <p id="gobbles">GoGobbles</p>
    </div></a>
    <div class="head">
      <a href="https://github.com/hspak/gogobbles">source</a>
      <a href="/">api</a>
    </div>

    <div class="container">
      <h1 id="listTitle" contenteditable="true" onkeydown="exitEdit(event)">{{ .Label }}</h1>
      <div id="theList" class="row">
      {{ range .Todos }}
        <div class="entry load col c12">
          <img id="but{{ .Id }}" class="x" src="/image/circlex.png" onclick="removeTodo({{ .Id }})"><span id="todo{{ .Id }}" class="t">{{ .Text }}</span>
        </div>
      {{ end }}
      </div>
      <input id="addBox" class="inputbox" type="text" placeholder="Add an entry here" onkeydown="addTodo(event)"></input><label id="inputHelper"></label>
    </div>

    <script type="text/javascript">
      var label = {{ .Label }}
      var todos = {{ .Todos }}
    </script>
    <script src="/js/list.js" type="text/javascript"></script>
  </body>
</html>
