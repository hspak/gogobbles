<!DOCTYPE html>
<html>
  <head>
    <title>{{ .Label }}</title>
    <link rel="stylesheet" type="text/css" href="/style/list.css">
  </head>
  <body>
    <p> {{ .Label }}
    <div id="theList">
    {{ range .Todos }}
      <img id="but{{ .Id }}" class="x" src="/icon/circlex.png" onclick="removeTodo({{ .Id }})" alt="Delete">
      <p id="todo{{ .Id }}">{{ .Text }}</p>
    {{ end }}
    </div>

    <input id="addBox" type="text" onkeydown="addTodo()"></input><label id="inputHelper"></label>

    <script type="text/javascript">
      var label = {{ .Label }}
      var todos = {{ .Todos }}
    </script>
    <script src="/js/list.js" type="text/javascript"></script>
  </body>
</html>
